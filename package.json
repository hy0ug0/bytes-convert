{
    "name": "bytes-convert",
    "version": "1.0.2",
    "main": "dist/bytes-convert.cjs.js",
    "module": "dist/bytes-convert.esm.js",
    "browser": "dist/bytes-convert.umd.js",
    "license": "MIT",
    "repository": "git@github.com:hy0ug0/bytes-convert.git",
    "author": "hy0ug0 <hugo.contreras.pro@gmail.com>",
    "keywords": [
        "bytes",
        "octet",
        "convert"
    ],
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "rollup -c -w",
        "build": "rimraf dist/ && rollup -c",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "format": "prettier --write",
        "lint": "eslint src/*.ts"
    },
    "devDependencies": {
        "@babel/preset-env": "7.10.4",
        "@babel/preset-typescript": "7.10.4",
        "@types/jest": "26.0.7",
        "@typescript-eslint/eslint-plugin": "3.7.1",
        "@typescript-eslint/parser": "3.7.1",
        "@wessberg/rollup-plugin-ts": "1.2.28",
        "commitizen": "4.1.2",
        "cz-conventional-changelog": "3.2.0",
        "eslint": "7.5.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "husky": "4.2.5",
        "jest": "26.1.0",
        "lint-staged": "10.2.11",
        "prettier": "2.0.5",
        "rimraf": "3.0.2",
        "rollup": "2.23.0",
        "rollup-plugin-terser": "6.1.0",
        "semantic-release": "17.1.1",
        "typescript": "3.9.7"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": "yarn format"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
